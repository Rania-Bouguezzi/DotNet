@model IEnumerable<CinemaManager_X.Models.Cinema.Producer>

@{
    ViewData["Title"] = "ProdsAndTheirMoviesdex";
}

<h1>ProdsAndTheirMoviesdex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
              Movie title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationalty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    @foreach (var m in item.Movies){

                        @Html.DisplayFor(modelItem => m.Title)
                    }
                    </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
